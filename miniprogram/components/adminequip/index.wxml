<!--components/adminequip/index.wxml-->
<view class="cu-card case">
	<view class="cu-item shadow">
		<view class="cu-bar bg-white">
			<view class="action sub-title">
				<text class="text-xxl text-bold text-blue">设备管理</text>
				<text class="bg-blue" style="width:8rem"></text>
			</view>
		</view>
	</view>
</view>

	<view class="cu-card case">
		<view class="cu-item shadow" style="margin-top: 0;">
			<view class="cu-form-group">
				<view class="title">新增设备：</view>
				<input name="name" placeholder="输入新设备名称" bindinput="BindEquipNameChange" value="{{EquipName}}"></input>
			</view>
			<view class="cu-form-group">
				<view class="title">是否可外借：</view>
				<switch class="red sm" style="margin-left:60rpx;" bindchange="Equipradiochange" checked="{{checked}}"></switch>
				<button class="cu-btn round shadow bg-gradual-blue" bindtap="AddEquip">提交</button>
			</view>
		</view>
	</view>

	<view class="cu-card case">
		<view class="cu-item shadow" style="margin-top: 0;">
			<view class="cu-form-group">
				<view class="title">查看所有器材详情：</view>
				<button class="cu-btn round shadow bg-gradual-blue" bindtap="goDelete">查看</button>
			</view>
		</view>
	</view>

<view class="cu-card case">
	<view class="cu-item shadow">
		<view class="cu-bar bg-white">
			<view class="action sub-title">
				<text class="text-xxl text-bold text-blue">用户信息</text>
				<text class="bg-blue" style="width:8rem"></text>
			</view>
		</view>
	</view>
</view>
  
	<view class="cu-card case">
		<view class="cu-item shadow" style="margin-top: 0;">
			<view class="cu-form-group">
				<view class="title">查看用户信息：</view>
				<button class="cu-btn round shadow bg-gradual-blue" bindtap="GoUser">查看</button>
			</view>
		</view>
	</view>


